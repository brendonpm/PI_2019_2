        android:layout_marginTop="20dp"
        android:layout_marginEnd="323dp"
        android:text="Listar Abastecimentos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bCadasVeic"
        android:background="@color/azullatao"
        android:textColor="@color/amarelolatao"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/bCadasAbast"
        android:layout_width="325dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="323dp"
        android:text="Cadastrar Abastecimento"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bListAbast"
        android:background="@color/azullatao"
        android:textColor="@color/amarelolatao"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/bRelatorios"
        android:layout_width="325dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="323dp"
        android:text="RelatÃ³rios"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bCadasAbast"
        android:background="@color/azullatao"
        android:textColor="@color/amarelolatao"
        android:textSize="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>